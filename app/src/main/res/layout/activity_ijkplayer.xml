<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:keepScreenOn="true"
    android:gravity="center"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hydbest.player.media.IjkVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/rl_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                style="@style/Widget.AppCompat.ProgressBar"
                android:indeterminate="true"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                android:indeterminateDrawable="@drawable/progressbar_loading"/>
            <TextView
                android:id="@+id/tv_load"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_below="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="正在加载中..."/>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/pane_top"
        android:orientation="horizontal"
        android:background="@color/zxing_viewfinder_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:tint="@color/white"/>
        <TextView
            android:id="@+id/tv_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_sys_time"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="15:00"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pane_bottom"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/zxing_viewfinder_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_start_or_pause"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/start_or_pause"/>
        <ImageView
            android:id="@+id/iv_next"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"/>
        <TextView
            android:id="@+id/tv_play_time"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="00:00"/>
        <SeekBar
            android:id="@+id/seek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:max="100"
            android:progressDrawable="@drawable/progressbar"
            android:progress="0"
            android:thumb="@drawable/thumb"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_duration_time"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="00:00"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_attributes"
        android:visibility="gone"
        android:background="@color/zxing_viewfinder_mask"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:padding="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_attr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/white"
            android:shadowDx="0.4"
            android:shadowDy="0.4"/>
    </RelativeLayout>
</RelativeLayout>